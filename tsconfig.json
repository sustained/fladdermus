{
  "compilerOptions": {
    "target": "es2020",
    "outDir": "./dist",
    "baseUrl": ".",
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "@discordjs/collection", "discord.js", "klasa"],
    "paths": {
      "@base/*": ["src/*"],
      "@arguments/*": ["src/arguments/*"],
      "@commands/*": ["src/commands/*"],
      "@events/*": ["src/events/*"],
      "@extendables/*": ["src/extendables/*"],
      "@finalizers/*": ["src/finalizers/*"],
      "@inhibitors/*": ["src/inhibitors/*"],
      "@languages/*": ["src/languages/*"],
      "@libraries/*": ["src/libraries/*"],
      "@monitors/*": ["src/monitors/*"],
      "@providers/*": ["src/providers/*"],
      "@schemas/*": ["src/schemas/*"],
      "@serializers/*": ["src/serializers/*"],
      "@bases/*": ["src/libraries/bases/*"],
      "@constants/*": ["src/libraries/constants/*"],
      "@services/*": ["src/libraries/services/*"],
      "@templates/*": ["src/libraries/templates/*"],
      "@utilities/*": ["src/libraries/utilities/*"],
      "@typings/*": ["src/libraries/types/*"]
    }
  },
  "include": ["./src/**/*", "./data/**/*"],
  "exclude": ["**/node_modules", "**/dist"]
}
